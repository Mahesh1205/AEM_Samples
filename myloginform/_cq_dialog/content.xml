<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Title" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <userNameLabel jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Provide user name placeholder " message="Hello" name="./name"/>
                    <passwordLabel jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Provide password placeholder" name="./password"/>
                    <!-- <newCheckBox jcr:primaryType="nt:unstructured" sling:resourceType="/granite/ui/components/coral/foundation/form/checkbox" fieldLabel="MyCheckBox" value="CheckedValue" uncheckedValue="Unchecked" name="./chkBox"/> -->
                    <themeColor jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/select" fieldLabel="Login Button Color" name="./color">
                        <items jcr:primaryType="nt:unstructured">
                            <red jcr:primaryType="nt:unstructured" text="Red" value="red" />
                            <green jcr:primaryType="nt:unstructured" text="Green" value="green" />
                            <purple jcr:primaryType="nt:unstructured" text="Purple" value="purple" />
                        </items>
                    </themeColor>


                </items>
            </column>
        </items>
    </content>
</jcr:root>
